<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*pwmanager</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <autoincrement>1</autoincrement>
                <default>0</default>
                <notnull>true</notnull>
            </field>
            <field>
                <name>user</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>title</name>
                <type>text</type>
                <default></default>
                <notnull>false</notnull>
                <length>256</length>
            </field>
            <field>
                <name>password</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>256</length>
            </field>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*pwmanager_tags</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <autoincrement>1</autoincrement>
                <default>0</default>
                <notnull>true</notnull>
            </field>
            <field>
                <name>term</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>32</length>
            </field>
            <index>
                <name>term_idx</name>
                <field>
                    <name>term</name>
                    <sorting>ascending</sorting>
                </field>
            </index>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*pwmanager_tagged</name>
        <declaration>
            <field>
                <name>password_id</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
            </field>
            <field>
                <name>tag_id</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
            </field>
            <index>
                <name>password_id_idx</name>
                <field>
                    <name>password_id</name>
                    <sorting>ascending</sorting>
                </field>
            </index>
            <index>
                <name>tag_id_idx</name>
                <field>
                    <name>tag_id</name>
                    <sorting>ascending</sorting>
                </field>
            </index>
        </declaration>
    </table>
</database>
